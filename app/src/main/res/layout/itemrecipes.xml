<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_62sdp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_3sdp"
    android:padding="@dimen/_2sdp"
    android:background="@drawable/recipesshape">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/itemrecipeslogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/itemrecipeslogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textRecipes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="All Recipes"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toEndOf="@+id/itemrecipeslogo"
        app:layout_constraintStart_toStartOf="@id/itemrecipeslogo"
        app:layout_constraintTop_toBottomOf="@id/itemrecipeslogo" />

</androidx.constraintlayout.widget.ConstraintLayout>